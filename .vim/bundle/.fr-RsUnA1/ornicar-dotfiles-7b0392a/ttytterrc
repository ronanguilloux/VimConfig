# Give me 5 seconds to cancel a tweet
slowpost=5
# Use colors
ansi=1
# Show ascii avatars
avatar=curl -s %U | convert - -colorspace Gray -colors 16 -antialias ppm:- | ppmascii -photo -winx=4
# Try to connect, again
hold=1
# Extensions to load
exts=/home/thib/data/workspace/dotfiles/ttytter/notify.pl
# Notifications
notifytype=ratpoison
# Tweet types that are notified
notifies=dm,me,reply,search
# Tweet timestamp format
timestamp=%H:%M
# Tags I care about
track=lichess colemak 
# Enable readline magic
readline=1
# Check for mentions from people I don't follow
mentions=1
# Check for new version
vcheck=1
