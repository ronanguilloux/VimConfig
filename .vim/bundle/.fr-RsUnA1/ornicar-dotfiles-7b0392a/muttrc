source ~/.muttrc.private
set from = "thibault.duplessis@gmail.com"
set realname = "Thibault Duplessis"
set folder = "imaps://imap.gmail.com:993"
set spoolfile = "+INBOX"
mailboxes = "+INBOX"
set postponed ="+[Gmail]/Drafts"
# allow mutt to open new imap connection automatically
unset imap_passive
# keep imap connection alive by polling intermittently (time in seconds)
set imap_keepalive = 300
# how often to check for new mail (time in seconds)
set mail_check = 120
set header_cache =~/.mutt/cache/headers
set message_cachedir =~/.mutt/cache/bodies
set certificate_file =~/.mutt/certificates
set mailcap_path = ~/.mutt/mailcap
set smtp_url = "smtp://thibault.duplessis@smtp.gmail.com:587/"
set editor = "vim  -c 'set tw=72' -c 'set filetype=mail'"
set markers=no # don't put '+' at the beginning of wrapped lines
set pager_index_lines= 9 # how large is the index window?
set sort = 'threads'
set sort_aux = 'last-date-received'
set query_command = "goobook query '%s'"
set implicit_autoview

bind editor <Tab> complete-query
bind editor <space> noop

# Fetch mail
bind index G imap-fetch-mail

# Reply to all
bind pager R group-reply

source ~/.mutt/themes/first
source ~/.mutt/macros

auto_view text/html
push <show-version>
